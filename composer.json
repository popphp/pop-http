{
    "name": "popphp/pop-http",
    "description": "Pop Http Component for Pop PHP Framework",
    "keywords": [
        "http",
        "http client",
        "http request",
        "http response",
        "curl",
        "streams",
        "file uploads",
        "php",
        "pop",
        "pop php"
    ],
    "homepage": "https://github.com/popphp/pop-http",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@noladev.com",
            "homepage": "https://www.popphp.org/"
        }
    ],
    "require": {
        "php": ">=8.2.0",
        "popphp/pop-filter": "^4.0.1",
        "popphp/pop-mime": "^2.0.0",
        "popphp/pop-utils": "^2.1.2",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0.0"
    },
    "suggest": {
        "ext-json": "For JSON data",
        "ext-simplexml": "For XML data",
        "ext-zlib": "For compression",
        "ext-mbstring": "For multi-byte strings"
    },
    "autoload": {
        "psr-4": {
            "Pop\\Http\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pop\\Http\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.2.x-dev"
        }
    }
}
