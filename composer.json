{
    "name": "popphp/pop-http",
    "description": "Pop Http Component for Pop PHP Framework",
    "keywords": [
        "http",
        "http client",
        "http request",
        "http response",
        "curl",
        "streams",
        "file uploads",
        "php",
        "pop",
        "pop php"
    ],
    "homepage": "http://www.popphp.org/",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@nolainteractive.com",
            "homepage": "http://www.nolainteractive.com/"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "popphp/pop-filter": "^4.0.0",
        "popphp/pop-mime": "^2.0.0",
        "popphp/pop-utils": "^2.1.0",
        "ext-curl": "*",
        "ext-simplexml": "*",
        "ext-json": "*",
        "ext-zlib": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0.0"
    },
    "autoload": {
        "psr-4": {
            "Pop\\Http\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pop\\Http\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.0.x-dev"
        }
    }
}
